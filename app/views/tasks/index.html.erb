<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
<li><%= link_to task.title, task_path(task) %> <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>
'.html_safe, task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>

<%= link_to 'Add new task', 'tasks/new', class:'btn btn-primary' %>
